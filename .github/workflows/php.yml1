
name: snipeit

on:
  push:
    branches: [ devcontainer]
  
jobs:

  build:
    name: CI/CD-snipeit
    runs-on: ubuntu-latest
    steps:
    - name: executing remote ssh commands using key
      uses: appleboy/ssh-action@master
      with:
        host: 52.66.187.252
        username: ubuntu
        key: ${{ secrets.KEY }}
        port: 22
        script: |
          whoami
          cd /var/www/snipe-it
          sudo git pull origin main
